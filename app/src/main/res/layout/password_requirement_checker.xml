<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/requirementCheck"
    android:gravity="center">

    <com.google.android.material.textview.MaterialTextView
        style="@style/DefaultRegularCaption1"
        android:id="@+id/requirementText"
        android:text="@string/eight_characters"
        android:layout_marginEnd="@dimen/margin_3"
        android:textColor="@color/greyscale_black_65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/check"
        android:id="@+id/requirementCheckImage"
        android:layout_width="@dimen/weight_16dp"
        android:layout_height="@dimen/height_16dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>