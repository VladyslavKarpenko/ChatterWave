<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.chatterwave.beta.features.auth_activity.sign_up.terms_and_conditions.TermsAndConditionsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/termsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termsToolbar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_19dp"
                android:layout_marginBottom="@dimen/margin_bottom_96dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/DefaultBoldTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/terms_and_conditions_text">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:layout_marginTop="@dimen/margin_top_16dp"
                    android:text="@string/welcome" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/the_interngram_service" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/the_interngram_service_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/your_commitments" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/your_commitments_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/permissions_you_give_to_us" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/permissions_you_give_to_us_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/additional_rights_we_retain" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/additional_rights_we_retain_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/content_removal" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/content_removal_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/our_agreement_and_disagree" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/our_agreement_and_disagree_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/who_has_rights" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/who_has_rights_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/who_is_responsible_if_something_happens" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/who_is_responsible_if_something_happens_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/how_we_will_handle_disputes" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/how_we_will_handle_disputes_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/unsolicited_material" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/unsolicited_material_text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsTextHeadline"
                    android:text="@string/updating_these_terms" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TermsAndConditionsText"
                    android:text="@string/updating_these_terms_text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


